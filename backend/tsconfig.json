{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "allowJs": true,
    "sourceMap": true,
    "verbatimModuleSyntax": true // Ensures ESM compatibility
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}